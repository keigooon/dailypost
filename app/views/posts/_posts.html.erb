<ul class="list-unstyled ">
  <% posts.each do |post| %>
    <li class="media mb-3 border-top" style="padding: 10px;">
      <div class="media-body">
        <div>
          <%= link_to user_path(post.user),:style => "color: black;" do %>
            <% if post.user.profile_image? %>
              <%= image_tag post.user.profile_image.url(:thumb)  %>
            <% else %>
              <img class="rounded img-fluid" src="/assets/default.png" alt="" width="30" height="30 "%>
            <% end %>
            <%= post.user.name %>
          <% end %>
          <span class="text-muted">posted at <%= post.created_at.to_s(:datetime_jp) %></span>
        </div>
        <div style="margin-top: 10px;">
          <p><%= link_to post.content, post, :style => "color: black;" %></p>
        </div>
        <div>
          <p><%= image_tag post.image.url if post.image?  %></p>
        </div>
        <div id="like-<%= post.id %>">
          <%= render "likes/like", post: post %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>